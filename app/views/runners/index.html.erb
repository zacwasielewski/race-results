<h1>Listing runners</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Place</th>
      <th>Sex</th>
      <th>Place in sex</th>
      <th>Place in age group</th>
      <th>Age group</th>
      <th>Gun time</th>
      <th>Gun pace</th>
      <th>Net time</th>
      <th>Net pace</th>
      <th>Country</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @runners.each do |runner| %>
      <tr>
        <td><%= runner.name %></td>
        <td><%= runner.place %></td>
        <td><%= runner.sex %></td>
        <td><%= runner.place_in_sex %></td>
        <td><%= runner.place_in_age_group %></td>
        <td><%= runner.age_group %></td>
        <td><%= runner.gun_time %></td>
        <td><%= runner.gun_pace %></td>
        <td><%= runner.net_time %></td>
        <td><%= runner.net_pace %></td>
        <td><%= runner.country %></td>
        <td><%= runner.state %></td>
        <td><%= link_to 'Show', runner %></td>
        <td><%= link_to 'Edit', edit_runner_path(runner) %></td>
        <td><%= link_to 'Destroy', runner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

